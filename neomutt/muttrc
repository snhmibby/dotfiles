#files and folders
set folder="$HOME/mail"
set mbox=+inbox/@jurjen.dev
set postponed=+postponed
set record=+sent
set tmpdir=/tmp

set alias_file=~/mail/.aliases
source ~/mail/.aliases

#incoming new mailboxes
mailboxes +inbox/@jurjen.dev
mailboxes +inbox/yahoo-jurjenm
mailboxes +inbox/riseup-landloper
mailboxes +list/rainbow-belgium.lists.riseup.net
mailboxes +list/rawfood.rainbowinfo.de
mailboxes +list/discourse.gohugo.io

#outgoing mail
source "gpg -d ~/.config/neomutt/smtp_config |"
set ssl_force_tls=yes
set ssl_starttls=yes
set use_from = yes
set editor=vim
set edit_headers
set copy #copy outgoing emails
set fast_reply
set reply_to
set reverse_name
set include #include message when replying
set forward_quote #include message when forwarding


#behaviour and display
set date_format="%d/%m/%y"
set index_format="[%Z] %D %20.20F %s"
set uncollapse_jump
set sort = threads
set delete=yes
set nomark_old
#status line on terminal title:
set ts_enabled=yes
set ts_status_format = "%n new | %M in %f"

#Pager
set pager_index_lines = 10
set pager_context = 3
set pager_stop
set menu_scroll
set tilde
unset markers
set quote_regexp = "^( {0,4}[>|:#%]| {0,4}[a-z0-9]+[>|]+)+"

#use mailcap to view html
auto_view text/html
alternative_order text/plain text/enriched text/html

#keys 
bind index <space> collapse-thread
bind index N search-opposite
bind pager N search-opposite
bind pager j next-line
bind pager k previous-line
bind pager g top
bind pager G bottom
bind attach <return> view-mailcap

#gpg
source gpg.rc
set crypt_autosign
set crypt_verify_sig=yes

#powerline
source powerline/colors/gruvbox-powerline.neomuttrc
source powerline/powerline.neomuttrc
